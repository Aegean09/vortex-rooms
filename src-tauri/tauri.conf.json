{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Vortex",
  "version": "0.6.0",
  "identifier": "com.vortex.rooms",
  "build": {
    "frontendDist": "https://vortex-rooms.com",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": ""
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Vortex",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "skipTaskbar": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Vortex"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "SocialNetworking",
    "shortDescription": "Real-time voice and text chat",
    "longDescription": "Vortex - Ephemeral voice and text chat rooms powered by WebRTC"
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://github.com/Aegean09/vortex-rooms/releases/latest/download/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZERTI3RjMxRThDRkIzQTIKUldTaXM4L29NWC9pYlQzQSt3a1FMbEpUQnZnaDlWdTd0NWFqb1JtU1ZxQ0dNWERMcHFkQlR0cjAK"
    }
  }
}
